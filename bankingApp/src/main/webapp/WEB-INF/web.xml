<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
             http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <display-name>bankingApp</display-name>

    <context-param>
        <param-name>test-context-key</param-name>
        <param-value>test-context-value</param-value>
    </context-param>

    <servlet>
        <servlet-name>UserLoginServlet</servlet-name>
        <servlet-class>dev.landen.servlet.UserLoginServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>SanityServlet</servlet-name>
        <servlet-class>dev.landen.servlet.SanityServelet</servlet-class>
        <load-on-startup>1</load-on-startup> <!-- Tells Tomcat to eagerly create this servlet -->
    </servlet>

    <servlet>
        <servlet-name>UserServlet</servlet-name>
        <servlet-class>dev.landen.servlet.UserServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>test</servlet-name>
        <servlet-class>dev.landen.servlet.TestServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>UserIdServlet</servlet-name>
        <servlet-class>dev.landen.servlet.UserIdServlet</servlet-class>
    </servlet>


    <servlet-mapping>
        <servlet-name>SanityServlet</servlet-name>
        <url-pattern>/sanity</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/user/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>test</servlet-name>
        <url-pattern>/test</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>UserLoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>UserIdServlet</servlet-name>
        <url-pattern>/getid</url-pattern>
    </servlet-mapping>



</web-app>



